<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.WelcomeController" stylesheets="@/styles/DarkThemeStyles.css">
    <children>
        <VBox alignment="CENTER" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="60" left="60" right="60" top="60" />
            </padding>
            <HBox fx:id="welcomeBox" alignment="CENTER_LEFT" spacing="20.0">
                <Label fx:id="welcomeLabel" text="Welcome to DOTA 2 Tournament Manager" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: linear-gradient(#e25822, #ffb347); -fx-effect: dropshadow(gaussian, #222, 3, 0.5, 1, 1); -fx-padding: 0 0 0 10;" />
            </HBox>
            <Label fx:id="descriptionLabel" wrapText="true" />
            <HBox alignment="CENTER" spacing="40.0">
                <Button fx:id="startButton" onAction="#handleStart" text="Start" />
                <Button fx:id="exitButton" onAction="#handleExit" text="Exit" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
