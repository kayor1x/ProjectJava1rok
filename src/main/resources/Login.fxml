<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController" stylesheets="@/styles/DarkThemeStyles.css">
    <children>
        <VBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <HBox spacing="10">
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
                <Button fx:id="registerButton" text="Register" onAction="#handleRegister"/>
                <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>